{
  "private": true,
  "name": "blog",
  "version": "1.0.26",
  "scripts": {
    "build": "run-p build-studio build-web",
    "build-studio": "cd studio && yarn run build",
    "build-web": "cd web && yarn run build",
    "dev-web": "cd web && yarn run dev",
    "dev-studio": "cd studio && yarn run dev",
    "dev": "run-p dev-web dev-studio",
    "format": "yarn run format",
    "graphql-deploy": "cd studio & run graphql-deploy",
    "lint-web": "cd web & yarn run lint",
    "lint-studio":"cd studio & yarn run lint",
    "lint": "run-p lint-studio lint-web",
    "postinstall": "yarn bootstrap",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@sanity/cli": "^2.21.0",
    "lerna": "^4.0.0"
  },
  "workspaces": {
    "workspaces": ["studio","web"],
    "nohoist": [
      "**/tailwindcss",
      "**/@tailwindcss/**"
    ]
  },
  "dependencies": {
    "yarn-run-all": "^3.1.1"
  }
}
